{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "lib":[
      "ES2020.Promise"
    ],
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": false,
    "outDir": "lib",
    "declaration": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declarationDir": "types"
  },
  "include": [
    "src/*",
    "bin/*"
  ]
}